---
import type { CollectionEntry } from 'astro:content';

import type { ContentKeys } from '../model/model';
import FormattedDate from './FormattedDate.astro';

interface Props {
  readonly blog: CollectionEntry<ContentKeys>;
}

const { blog } = Astro.props;
---

<a class='link' href={`/${blog.collection}/${blog.slug}/`}>
  <div class='content'>
    <div class='meta-info'>
      <FormattedDate class:list={['date']} date={blog.data.pubDate} />
      {'speaker' in blog.data && <span class='speaker-divider'>•</span>}
      {'speaker' in blog.data && <span class='speaker'>{blog.data.speaker}</span>}
    </div>

    <h2 class='title'>{blog.data.title}</h2>
    <p class='description'>{blog.data.description}</p>

    <div class='read-more'>
      Read more →
    </div>
  </div>
</a>

<style>
  .link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .link:hover .title {
    color: rgb(var(--accent));
  }

  .link:hover .read-more {
    color: rgb(var(--accent-dark));
  }

  .content {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.25rem;
  }

  .meta-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.875rem;
  }

  .date {
    color: var(--blog-text-color);
  }

  .speaker-divider {
    color: var(--blog-divider-color);
  }

  .speaker {
    color: var(--blog-text-color);
    font-weight: 500;
  }

  .title {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(var(--accent-dark));
    margin-bottom: 0.75rem;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .description {
    color: var(--blog-text-color);
    line-height: 1.6;
    margin-bottom: 1rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    flex-grow: 1;
  }

  .read-more {
    color: rgb(var(--accent-light));
    font-weight: 600;
    font-size: 0.875rem;
    margin-top: auto;
    transition: color 0.3s ease;
  }

  @media (max-width: 768px) {
    .title {
      font-size: 1.375rem;
    }

    .meta-info {
      font-size: 0.8125rem;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 1.25rem;
    }

    .description {
      font-size: 0.9375rem;
    }
  }
</style>
