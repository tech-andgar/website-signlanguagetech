---
interface Props {
  href: string;
  text: string;
  class?: string;
}

const { href, text, class: className } = Astro.props;
---

<a href={href} class={`cta-button ${className}`}>
  {text}
</a>

<style>
  .cta-button {
    display: inline-block;
    background-color: var(--accent-color); /* Using a more prominent accent color */
    color: var(--white);
    padding: 0.8em 1.8em;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.2s ease;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .cta-button:hover {
    background-color: var(--accent-color-dark); /* A slightly darker shade on hover */
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
  }

  /* Define these CSS variables in your global.css or theme file */
  :root {
    --accent-color: var(--accent); /* Example: Indigo 500 */
    --accent-color-dark: #4F46E5; /* Example: Indigo 600 */
    --white: #ffffff;
  }

  @media (prefers-color-scheme: dark) {
    .cta-button {
      background-color: var(--accent-color-dark);
    }
    .cta-button:hover {
      background-color: var(--accent-color);
    }
  }
</style>